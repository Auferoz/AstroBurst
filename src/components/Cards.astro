---
import CardGame from '../components/CardGame.astro';
import { getSheetGamesAPI } from '../services/sheets';

const dataSort = await getSheetGamesAPI()
---


<div class="grid gap-4 grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-7">
	{dataSort.map((datos: any) => (
		<CardGame 
		id={datos.id}
		title={datos.title}
		poster={datos.poster}
		status={datos.status}
		genre={datos.genre}
		released={datos.released}
		companie={datos.companie}
		platform_name={datos.platform_name}
		rating={datos.rating}
		achievements_obt={datos.achievements_obt}
		achievements_ttl={datos.achievements_ttl}
		hours_mttf={datos.hours_mttf}
		date_start={datos.date_start}
		last_dayplay={datos.last_dayplay}
		/>
	))}
</div>