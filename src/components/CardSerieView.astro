---
interface Props {
    id:            number;
    title:         string;
    seasons:       string;
    episodes:      string;
    released:      string;
    total_runtime: string;
    genre:         string;
    rating:        number;
    watch:         string;
    view_start:    string;
    view_end:      string;
    poster:        string;
    user_uuid:     string;
}

const {
    id,
    title,
    seasons,
    episodes,
    released,
    total_runtime,
    genre,
    rating,
    watch,
    view_start,
    view_end,
    poster,
    user_uuid,
} = Astro.props;

---

<article class="relative group transition-all duration-200 ease-linear">
    <span class="bg-green-100 text-green-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-green-400 border border-green-400 absolute z-10 bottom-2 left-2 transition-all duration-200 ease-linear group-hover:translate-y-2 group-hover:-translate-x-2 group-hover:transition-all group-hover:duration-200 group-hover:ease-linear">
        {seasons} : {episodes}
    </span>
    <picture>
        <img src={poster} alt="" class="min-h-[234px] border-gray-200 border-[1px] rounded-lg transition-all duration-200 ease-linear
        group-hover:scale-105 group-hover:rounded-md group-hover:transition-all group-hover:duration-200 group-hover:ease-linear">
    </picture>
</article>