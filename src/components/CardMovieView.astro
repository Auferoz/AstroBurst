---
interface Props {
    id:        number;
    title:     string;
    released:  string;
    runtime:   string;
    genre:     string;
    rating:    number;
    watch:     keyof typeof Watch;
    view:      string;
    poster:    string;
    image:     string;
    user_uuid: string;
}

const {
    id,
    title,
    released,
    runtime,
    genre,
    rating,
    watch,
    view,
    poster,
    image,
    user_uuid,
} = Astro.props;

let Watch = {
    Cine : "Cine",
    HBOMax : "HBO Max",
    Hbo : "HBO",
    Netflix : "Netflix",
    PrimeVideo : "Prime Video",
    Star : "Star+",
    Tv : "TV",
};

---

<article class="relative">
    <span class="bg-gray-100 text-gray-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-400 border border-gray-400 absolute z-10 bottom-2 left-2">
        {watch}
    </span>
    <picture>
        <img src={poster} alt="" class="min-h-[234px] scale-100 transition-all duration-300 ease-linear border-gray-200 border-[1px] rounded-lg
        group-hover:scale-125 group-hover:rounded-md group-hover:transition-all group-hover:duration-300 group-hover:ease-linear">
    </picture>
</article>